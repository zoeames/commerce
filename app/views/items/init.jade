doctype html
html
  head
    meta(charset='utf-8')
    title eCommerce
    link(rel='stylesheet', href='/css/style.css')
  body
    h2 New Item
    nav
        a(href='/') Home
        a(href='/about') About
        a(href='/faq') FAQ
        a(href='/items/new') New Item
        a(href='/items') Inventory

    form(method='post', action='/items')
      input(name='name', type='text', placeholder='iPad', autofocus=true)
      input(name='dimensions[length]', type='number', placeholder='length')
      input(name='dimensions[width]', type='number', placeholder='width')
      input(name='dimensions[height]', type='number', placeholder='height')
      input(name='weight', type='number', placeholder='weight')
      input(name='color', type='color', placeholder='color')
      input(name='quantity', type='number', placeholder='quantity')
      input(name='msrp', type='number', placeholder='msrp')
      input(name='percentOff', type='number', placeholder='percentOff')
      button Add Item to Database

